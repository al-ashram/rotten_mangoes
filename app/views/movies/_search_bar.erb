<%= form_tag(movies_path, method: "get", :class => "form-inline") do %>

  <%= label_tag(:search_title, "By Title:") %>
  <%= text_field_tag :search_title, params[:search_title] %>

  <%= label_tag(:search_director, "Director:") %>
  <%= text_field_tag(:search_director, params[:search_director]) %>

 <% drop_down_options = [["Any", nil],["Under 90 minutes","<90"], ["Between 90 and 120","BETWEEN 90 AND 120"], ["Over 120 minutes", ">120"]] %>
  <%= label_tag(:search_duration, "Duration:") %>
  <%= select_tag(:search_duration, options_for_select(drop_down_options, params[:search_duration])) %> 

  <%= submit_tag("Search") %>

<% end %>